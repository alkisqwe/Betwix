<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:background="#FFFFFF">

		<ImageView
			android:layout_weight="0.5"
			android:layout_width="0dp"
			android:layout_height="match_parent"/>

		<Button
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="ΤΑΙΝΙΕΣ"
			android:layout_weight="1"
			android:gravity="center|center_vertical|center_horizontal"
			android:background="#FFFFFF"
			android:onClick="moviesref"/>

		<Button
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="ΣΕΙΡΕΣ"
			android:layout_weight="1"
			android:onClick="tvref"
			android:gravity="center|center_vertical|center_horizontal"
			android:background="#FFFFFF"/>

		<Button
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:text="ΛΙΣΤΑ ΜΟΥ"
			android:layout_weight="1"
			android:gravity="center|center_vertical|center_horizontal"
			android:background="#FFFFFF"
			android:onClick="favorites"/>

	</LinearLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:background="#262626"
		android:layout_weight="1.0">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΠΕΡΙΠΕΤΕΙΑ ΔΡΑΣΗΣ(ACT+ADV)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scroltwenty"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΚΙΝΟΥΜΕΝΩΝ ΣΧΕΔΙΩΝ(ANIM)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scroltwentyone"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΚΩΜΩΔΙΑ(COMEDY)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scroltwentytwo"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΕΓΚΛΗΜΑ(CRIME)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scroltwentythree"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΝΤΟΚΥΜΑΝΤΕΡ(DOCUMENT)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scroltwentyfour"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΔΡΑΜΑ(DRAMA)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scroltwentyfive"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΟΙΚΟΓΕΝΕΙΑΚΩΝ(FAMILY)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scroltwentysix"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΠΑΙΔΙΚΑ(KIDS)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scroltwentyseven"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΜΥΣΤΗΡΙΟΥ(MYSTERY)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scroltwentyeight"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΕΙΔΗΣΕΙΣ(NEWS)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scroltwentynine"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΠΡΑΓΜΑΤΙΚΟΤΗΤΑ(REALITY)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scrolthirty"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΕΠΙΣΤΗΜΟΝΙΚΗΣ ΦΑΝ(SCI-FI)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scrolthirtyone"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΣΑΠΟΥΝΟΠΕΡΕΣ(SOAP)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scrolthirtytwo"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΟΜΙΛΙΑ(TALK)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scrolthirtythree"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΠΟΛΕΜΟΣ+ΠΟΛΙΤΙΚΗ(WAR+PO)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scrolthirtyfour"/>

			</HorizontalScrollView>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ΔΥΤΙΚΟΣ(WESTERN)"
				android:textSize="25sp"/>

			<HorizontalScrollView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<LinearLayout
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/scrolthirtyfive"/>

			</HorizontalScrollView>

		</LinearLayout>

	</ScrollView>

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_weight="0.1"
		android:layout_height="1dp"
		android:background="#262626">

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="70dp"
			android:layout_weight="0"
			android:layout_gravity="bottom"
			android:background="#FFFFFF">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center|center_vertical|center_horizontal"
				android:onClick="home">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/homeimage"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="ΣΠΙΤΙ"
					android:gravity="center|center_vertical|center_horizontal"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="center|center_vertical|center_horizontal"
				android:onClick="search">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/searchimage"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="ΑΝΑΖΗΤΗΣΗ"
					android:gravity="center|center_vertical|center_horizontal"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:onClick="more"
				android:gravity="center|center_vertical|center_horizontal">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/moreimage"/>

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:text="ΠΕΡΙΣΣΟΤΕΡΑ"
					android:gravity="center|center_vertical|center_horizontal"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

